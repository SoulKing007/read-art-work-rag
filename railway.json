{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["python311"]
        },
        "install": {
          "cmds": [
            "python -m venv /opt/venv",
            ". /opt/venv/bin/activate && pip install --upgrade pip",
            ". /opt/venv/bin/activate && pip install -r api/requirements.txt"
          ]
        }
      },
      "start": {
        "cmd": ". /opt/venv/bin/activate && uvicorn api.main:app --host 0.0.0.0 --port $PORT"
      }
    }
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
